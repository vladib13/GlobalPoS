<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="3dp" android:color="#87CEFA"/>
            <padding android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp"/>
            <corners android:radius="20px"/>
            <gradient android:angle="270.0" android:endColor="@color/colorPrimary" android:startColor="@color/background" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="5dp" android:color="#87CEFA"/>
            <padding android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp"/>
            <corners android:radius="20px"/>
            <gradient android:angle="270.0" android:endColor="@color/background" android:startColor="@color/colorPrimary" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="3dp" android:color="#87CEFA"/>
            <padding android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp"/>
            <corners android:radius="20px"/>
            <gradient android:angle="270.0" android:endColor="@color/colorPrimary" android:startColor="@color/background" />
        </shape>
    </item>
</selector>


