<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back_style"
    tools:context="com.pax.tradepaypw.EntryMenuActivity"
    >

    <TextView
        android:layout_marginBottom="32dp"
        style="@style/textStyle"
        android:textSize="50sp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/app"
        android:text="Global PoS"/>
    <TextView
        android:layout_marginBottom="50dp"
        style="@style/textStyle"
        android:textSize="20sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:id="@+id/resumen"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A solo un paso de todas tus operaciones."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_below="@id/resumen"
        android:weightSum="1"
        android:id="@+id/botonesMenu"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1"
            android:layout_weight="0.50"
            >
            <Button
                android:layout_alignParentRight="true"
                style="@style/btnStyle"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Punto de Venta"
                android:id="@+id/btnPto"
                android:drawableTop="@drawable/punto_venta"
                android:layout_weight="0.50"
                android:onClick="cargarPuntoVenta"
                android:background="@drawable/btn_stl"
                />
            <Button
                android:layout_alignParentLeft="true"
                android:layout_below="@id/btnPto"
                style="@style/btnStyle"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Recargar"
                android:drawableTop="@drawable/recarga"
                android:id="@+id/btnSig"
                android:onClick="cargarRecarga"
                android:background="@drawable/btn_stl"
                android:layout_weight="0.50" />
        </LinearLayout>

        <Button
            style="@style/btnStyle"
            android:background="@drawable/btn_stl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Salir"
            android:drawableTop="@drawable/salir"
            android:id="@+id/btnSalir"
            android:onClick="salir"
            android:layout_weight="0.50" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/botonesMenu"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
