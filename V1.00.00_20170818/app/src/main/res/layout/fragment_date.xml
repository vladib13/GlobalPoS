<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pax.tradepaypw.DateFragment"
    android:background="@drawable/back_style">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff">

        <TextView
            android:background="@drawable/btn_stl"
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="versionClick"
            android:textColor="#7c7b81"
            android:gravity="center"
            android:textSize="@dimen/font_size_normal"
            android:text="@string/version_date" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
